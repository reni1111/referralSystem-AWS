{
	"env": {
		"browser": true,
		"es6": true,
		"node": true,
		"jasmine": true
	},
	"plugins": [
		"promise",
		"async-await",
		"import"
	],
	"extends": [
		"eslint:recommended",
		"plugin:promise/recommended",
		"plugin:import/recommended",
		"plugin:import/errors",
  	"plugin:import/warnings"
	],
	"parserOptions": {
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true,
			"modules": true
		}
	},
	"parser": "babel-eslint",
	"rules": {
		"no-var": "error",
		"no-const-assign": "error",
		"no-undef": "error",
		"no-unreachable": "error",
		"no-unused-vars": "error",
		"constructor-super": "error",
		"valid-typeof": "error",
		"no-else-return": "error",
		"no-eq-null": "error",
		"camelcase": "warn",
		"no-whitespace-before-property": "error",
		"max-depth": [
			"error",
			4
		],
		"max-len": [
			"error",
			220
		],
		"eqeqeq": [
			"error",
			"always"
		],
		"comma-spacing": [
			"error",
			{
				"before": false,
				"after": true
			}
		],
		"key-spacing": [
			"error",
			{
				"beforeColon": false,
				"afterColon": true
			}
		],
		"keyword-spacing": [
			"error",
			{
				"before": true,
				"after": false
			}
		],
		"line-comment-position": [
			"warn",
			{
				"position": "above"
			}
		],
		"object-curly-spacing": [
			"error",
			"always"
		],
		"spaced-comment": [
			"warn",
			"always"
		],
		"import/no-unresolved": [
			2,
			{
				"commonjs": true,
				"amd": true
			}
		],
		"import/unambiguous": "off",
		"no-console": "off",
		"no-mixed-spaces-and-tabs": "off",
		"indent": [
			"error",
			2
		],
		"quotes": [
			"error",
			"single"
		],
		"semi": [
			"error",
			"never"
		],
		"strict": [
			2,
			"global"
		]
	}
}
